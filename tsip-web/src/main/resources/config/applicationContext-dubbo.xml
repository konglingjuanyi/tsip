<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"  
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
                           http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<aop:aspectj-autoproxy proxy-target-class="false" />
	<bean id="exceptionAspect"
		class="com.saicmotor.telematics.framework.core.aspect.RpcExceptionAspect" />

	<!-- 协议配置 -->
	<dubbo:protocol name="${dubbo.protocol.name}" port="${dubbo.protocol.port}" />

	<!-- 监控中心配置 -->
	<dubbo:monitor protocol="${dubbo.monitor.protocol}" />

	<!-- 应用配置 -->
	<dubbo:application name="${dubbo.app.name}" organization="${dubbo.app.org}" owner="${dubbo.app.owner}" />

	<!-- 注册中心配置 -->
	<dubbo:registry id="zookeeper_registry" protocol="${dubbo.registry.protocol}"
		address="${dubbo.registry.address}" client="${dubbo.registry.client}"
		group="${dubbo.group}" />

    <!-- dubbo server 端配置
		 <bean id="applicationServiceV2"
		class="com.saicmotor.telematics.message.v1_2.ApplicationServiceImpl" />
		<dubbo:service
		interface="com.saicmotor.telematics.tsgp.sp.message.api.IApplicationService"
		ref="applicationServiceV2" version="1.1" loadbalance="roundrobin"
		retries="0" timeout="30000" registry="${dubbo.service.registry}" /> 
 -->
</beans>